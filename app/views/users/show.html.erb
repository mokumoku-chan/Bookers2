<% flash.each do |key, value| %>
  <%= content_tag(:div, value, class: "#{key}") %>
<% end %>


<%= render 'users/user_info', user: @user %>

<%= render 'books/new_book', book: @book %>




<h2>Books</h2>

<table>
    <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan = "3"></th>
    </tr>

    <% @books.each do |book| %>

      <tr>
        <td>
          <%= image_tag 'no_image.jpg', size: "60x60" %><br>
        </td>

        <td>
          <%= link_to book.title, book_path(book) %>
        </td>

        <td>
          <%= book.body %>
        </td>
      </tr>

    <% end %>

</table>



