<% flash.each do |key, value| %>
  <%= content_tag(:div, value, class: "#{key}") %>
<% end %>


<div class = "container">
  <div class = "row">

    <div class = "col-3">
      <%= render 'books/new_book', user: @user, book: @book %>
    </div>


    <div class = "col-9">
      <h2>Books</h2>

      <table>
          <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan = "3"></th>
          </tr>

          <% @books.each do |book| %>

            <tr>
              <td>
                <%= attachment_image_tag book.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg"%>
              </td>

              <td>
                <%= link_to book.title, book_path(book) %>
              </td>

              <td>
                <%= book.body %>
              </td>
            </tr>

          <% end %>

      </table>
    </div>
  </div>
</div>

