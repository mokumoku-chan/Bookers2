<div class = "text-danger">
  <% if book.errors.any? %>
    <h3>
      <%= book.errors.count %> errors prohibited this obj from being saved:
    </h3>

    <% book.errors.full_messages.each do |message| %>
      <ul>
        <li><%= message %></li>
      </ul>
    <% end %>

  <% end %>

</div>



<h2>User info</h2>

<%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>

<table class = "table">
  <tr>
    <th>name</th>
    <th><%= user.name %></th>
  </tr>

  <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
  </tr>
</table>

<% if user.id == current_user.id %>
  <div class = "row my-4">
    <%= link_to edit_user_path(current_user.id), class:"btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
    <% end %>
  </div>


<% else %>
  <%= link_to "update", user_path(current_user.id) %>

<% end %>




<h2 class = "my-3">New book</h2>

<%= form_with model: book, local: true do |f| %>

  <div class = "form-group mb-3">
    <h4>Title</h4>
    <%= f.text_field :title, class: "w-100" %>
  </div>

  <div class = "form-group">
    <h4>Opinion</h4>
    <%= f.text_area :body , class: "w-100" %>
  </div>

  <%= f.submit 'Create Book',class:"btn btn-success my-3" %>


<% end %>