<h1>Books</h1>

<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td>
        <%= image_tag 'sample-author1.jpg', size: "60x60" %>
      </td>

      <td>
        <%= link_to book.title, book_path(book.id) %>
      </td>

      <td>
        <%= book.body %>
      </td>
    </tr>

</table>

<% end %>