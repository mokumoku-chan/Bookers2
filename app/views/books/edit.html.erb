<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this obj from being saved:

  <% @book.errors.full_messages.each do |message| %>
    <p><%= message %></p>
  <% end %>

<% end %>


<div class = "container pt-3">
  <div class = "row">
    <div class = "col-sm-12 col-md-8 col-lg-5 mx-auto">
      <h2>Editing Book</h1>

      <%= form_with model: @book, local:true do |f| %>

        <div class = "form-group">
          <label for = "inputTitle">Title</label><br>
          <%= f.text_field :title, autofocus: true, id:"inputTitle", class: "w-100" %>
        </div>

        <div class = "form-gourp">
          <label for = "inputBody">Opinion</label><br>
          <%= f.text_area :body, autofocus: true, id:"inputBody", class: "w-100" %>
        </div>

        <p><%= f.submit "Update Book", class: "btn btn-success my-3" %></p>


      <% end %>

      <%= link_to "Show", book_path(@book) %>
      |
      <%= link_to "Back", books_path %>

    </div>
  </div>
</div>