<%= render 'users/user_info', user: @user %>

<%= render 'books/new_book', book: @book %>


<h1>Books</h1>

<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td>
        <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
      </td>

      <td>
        <%= link_to book.title, book_path(book.id) %>
      </td>

      <td>
        <%= book.body %>
      </td>
    </tr>
  <% end %>
</table>

