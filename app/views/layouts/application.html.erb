<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/e2c2aeffb7.js" crossorigin="anonymous"></script>
    <meta name = "viewport" content = "width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


    <nav class = "navbar navbar-expand-lg navbar-dark bg-dark">
      <div class = "container">
        <a class = "navbar-brand p-3" href = "/"><h2>Bookers</h2></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>


        <div class = "collapse navbar-collapse" id = "navbarNav">
          <ul class = "navbar-nav ml-auto text-light">
            <% if user_signed_in? %>

              <%= link_to user_path(current_user.id) do %>
                <li class = "nav-item m-2 text-light">
                  <i class="fas fa-home"></i>Home
                </li>
                <% end %>


              <%= link_to users_path do %>
                <li class = "nav-item m-2 text-light">
                  <i class="fas fa-users"></i> Users
                </li>
              <% end %>


              <%= link_to books_path do %>
                <li class = "nav-item m-2 text-light">
                  <i class="fas fa-book-open"></i> Books
                </li>
              <% end %>


              <%= link_to destroy_user_session_path, method: :delete do %>
                <li class = "nav-item m-2 text-light">
                  <i class="fas fa-sign-out-alt"></i> Log out
                </li>
              <% end %>



            <% else %>

              <%= link_to root_path do %>
                <li class = "nav-item m-2 text-light">
                  <i class="fas fa-home"></i> Home
                </li>
              <% end %>


              <%= link_to homes_about_path do %>
                <li class = "nav-item m-2 text-light">
                  <i class="fas fa-link"></i> About
                </li>
              <% end %>


              <%= link_to new_user_registration_path do %>
                <li class = "nav-item m-2 text-light">
                  <i class="fas fa-user-plus"></i> Sign up
                </li>
              <% end %>



              <%= link_to new_user_session_path do %>
                <li class = "nav-item m-2 text-light">
                  <i class="fas fa-sign-in-alt"></i> Log in
                </li>
              <% end %>


            <% end %>
          </ul>
        </div>
      </div>
    </nav>

  </head>

  <body>
    <%= yield %>
  </body>

  <footer>
    <div class = "container mt-5">
      <div class = "row">
        <div class = "mx-auto">
          <p>CopyRigth Infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>
</html>
