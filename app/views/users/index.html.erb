

<div class = "container pt-5">
  <div class = "row">

    <div class = "col-md-3">
      <%= render 'books/new_book', user: @user, book: @book %>
    </div>


    <div class = "col-md-8 offset-md-1">
      <h2>Users</h2>

      <table class = "table">
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan = "3"></th>
        </tr>

        <% @users.each do |user| %>
          <tr>
            <td>
              <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>
              <%= link_to "Show", user_path(user.id) %>
            </td>
          </tr>
        <% end %>
      </table>

    </div>
  </div>
</div>

