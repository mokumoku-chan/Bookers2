<div class = "container pt-3">

  <div class = "row">
    <div class = "col-sm-12 col-md-8 col-lg-5 mx-auto">

      <div class = "text-danger">
        <% if @user.errors.any? %>
          <h3>
            <%= @user.errors.count %> errors prohibited this obj from saved:
          </h3>

          <% @user.errors.full_messages.each do |message| %>
            <ul>
              <li><%= message %></li>
            </ul>
          <% end %>
        <% end %>
      </div>



      <h2>User info</h2>

      <%= form_with model:@user, local:true do |f| %>

        <div class = "form-group">
          <label for = "inputname">name</label><br>
          <%= f.text_field :name, autofocus: true, id:"inputname", placeholder:"name", class: "w-100" %>
        </div>


        <div class = "form-group">
          <%= attachment_image_tag @user, :profile_image, :fill, 60, 60 %>
          <label for = "inputimage">Image</label><br>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
        </div>


        <div class = "form-group">
          <label for = "Introduction">Introduction</label><br>
          <%= f.text_area :introduction, autofocus: true, id:"Introduction" , class: "w-100"%>
        </div>

        <%= f.submit "Update User", class: "btn btn-secondary" %>

      <% end %>
    </div>

  </div>
</div>