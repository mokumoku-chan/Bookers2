<h1>User info</h1>

<% if @user.errors.any? %>
  <%= @user.errors.count %> errors prohibited this obj from saved:

  <% @user.errors.full_messages.each do |message| %>
    <p><%= message %></p>
  <% end %>
<% end %>


<%= form_with model:@user, local:true do |f| %>

  <label for = "inputname">name</label>
  <%= f.text_field :name, autofocus: true, id:"inputname", placeholder:"name" %>

  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60 %>
  <label for = "inputimage">Image</label>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>

  <label for = "Introduction">Introduction</label>
  <%= f.text_field :introduction, autofocus: true, id:"Introduction" %>

  <%= f.submit "Update User" %>

<% end %>